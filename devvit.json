{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "breaking-crystal",
  "version": "0.0.1",
  "provides": [
    "breaking-crystal"
  ],
  "reddit-api-scopes": [
    "identity"
  ],
  "features": [
    "useState"
  ],
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "breaking-crystal",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  }
}